import matplotlib.pyplot as plt
import numpy as np

def S(n):
    return (n * n * n + 3 * n * n + 2 * n) / 3
n_values = np.arange(0, 10, 1)
S_values = [S(n) for n in n_values]
plt.scatter(n_values, S_values, marker='o', color='b')
plt.vlines(n_values, 0, S_values, colors='gray', linestyles='dashed')
plt.title('Graph of S(n)')
plt.xlabel('n')
plt.ylabel('S(n)')
plt.grid(True)
plt.show()
